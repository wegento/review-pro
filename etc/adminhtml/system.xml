<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="replay_review_section" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Review Pro</label>
            <tab>wegento</tab>
            <resource>WeGento_ReviewPro::system_config</resource>

            <group id="replay_review_config" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Config</label>

                <field id="enable" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="admin_email"
                       translate="label"
                       type="text"
                       sortOrder="10"
                       showInDefault="1"
                       showInWebsite="1"
                       showInStore="0"
                >
                    <label>Admin's email to send notification</label>
                </field>
                <field id="customer_status" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Send notification when review Approve or Reject</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="customer_notify_replay" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Send notification replay to customer</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

            </group>

        </section>
    </system>
</config>
